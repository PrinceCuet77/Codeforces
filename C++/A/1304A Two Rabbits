#include <bits/stdc++.h>
using namespace std;

typedef long long ll;

int main()
{
        ll testCase;
        cin >> testCase;

        while ( testCase-- ) {
                ll x, y, a, b;
                cin >> x >> y >> a >> b;

                ll top = y - x;
                ll bottom = a + b;

                if ( top % bottom == 0 )
                        cout << top / bottom << endl;
                else
                        cout << -1 << endl;
        }

        return 0;
}
